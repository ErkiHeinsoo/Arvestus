            <TextBox Name="userBox" Margin="0,100,0,0" 
                     PlaceholderText="Kasutajanimi"
                     Background="White">

            </TextBox>
            <PasswordBox Name="passwordBox"
                         PlaceholderText="parool"
                         Background="White">
            </PasswordBox>
            <Button Name="button1" 
                    Content="Logi sisse"
                    Click="Button1_Click"
                    IsEnabled="True" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0"
                    Background="White">


